<Page x:Class="WpfAppPractwork1.Pages.Dialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppPractwork1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dialog">

    <Grid>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center">
            <Button Content="Открыть файл"
                       x:Name="btnOpen"
                    Click="btnOpen_Click"/>
            <Button Content="Сохранить в файл"/>
            <Button Content="Вывод на печать"/>
            <Button Content="Настройки шрифта"/>
            <Button Content="Настройка цвета"/>
        </StackPanel>
    </Grid>
</Page>
